@using Bonyan.AspNetCore.Components
@using Bonyan.AspNetCore.Components.Admin.Components.Layouts
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.Extensions.Options
@inject IOptions<BonBlazorOptions> BlazorOptions

<Router AppAssembly="BlazorOptions.Value.AppAssembly" AdditionalAssemblies="BlazorOptions.Value.AdditionalAssembly">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(AdminLayout)"/>
        <FocusOnNavigate RouteData="routeData" Selector="h1"/>
    </Found>
</Router>


@code {

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

}