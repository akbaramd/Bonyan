@page "/login"
@using Bonyan.UserManagement.Domain.Repositories
@using BonyanTemplate.Domain.Entities
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IBonUserReadOnlyRepository<User> User

<h3>Login</h3>

<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Username:</label>
        <InputText @bind-Value="loginModel.Username" />
    </div>

    <div>
        <label>Password:</label>
        <InputText @bind-Value="loginModel.Password" type="password" />
    </div>

    <button type="submit">Login</button>
</EditForm>

@code {
private LoginModel loginModel = new();

private async Task HandleLogin()
{
var loginSuccess = await LoginService.LoginAsync(loginModel.Username, loginModel.Password);

if (loginSuccess)
{
Navigation.NavigateTo("/dashboard"); // Redirect to a secure page on successful login
}
else
{
// Show an error message or handle failed login
Console.WriteLine("Login failed");
}
}

public class LoginModel
{
public string Username { get; set; }
public string Password { get; set; }
}
}
