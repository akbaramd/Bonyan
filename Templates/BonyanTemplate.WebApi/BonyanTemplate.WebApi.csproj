<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>BonyanTemplate.WebApi</RootNamespace>
        <AssemblyName>BonyanTemplate.WebApi</AssemblyName>
        <UserSecretsId>aspnet-BonyanTemplate.WebApi-CE7F879C-7CAD-46D9-A8DD-43B79A37F24D</UserSecretsId>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>$(NoWarn);1591</NoWarn>
        <AnalysisLevel>latest-recommended</AnalysisLevel>
        <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
        <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    </PropertyGroup>


    <Import Project="..\template-package.props" />
    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.10"/>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Bonyan.AspNetCore.Authentication" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.AspNetCore.Components" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.AspNetCore.Mvc" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.Workers.Hangfire" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.EntityFrameworkCore" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.AspNetCore" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.EntityFrameworkCore.SqlServer" Version="$(BonyanPackageVersion)" />
        <PackageReference Include="Bonyan.Module.IdentityManagement.WebApi" Version="$(BonyanPackageVersion)" />
        <ProjectReference Include="..\BonyanTemplate.Application\BonyanTemplate.Application.csproj"/>
        <ProjectReference Include="..\BonyanTemplate.Infrastructure\BonyanTemplate.Infrastructure.csproj"/>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.8" NoWarn="NU1605"/>
        <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="8.0.8" NoWarn="NU1605"/>
        <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.8"/>
        <PackageReference Include="Microsoft.Identity.Web" Version="2.15.2"/>
        <PackageReference Include="Microsoft.Identity.Web.DownstreamApi" Version="2.15.2"/>
        
    </ItemGroup>
    <ItemGroup>
      <Folder Include="wwwroot\" />
    </ItemGroup>

</Project>
