@{
    ViewData["Title"] = "Forgot Password Confirmation";
    var resetLink = ViewData["ResetLink"] as string;
}

<div class="card">
    <h1>Check your inbox</h1>
    <p>If an account exists for that user name or email, we've generated a password reset link.</p>
    @if (!string.IsNullOrEmpty(resetLink))
    {
        <p><strong>Development mode:</strong> Use this link to reset your password:</p>
        <p><a href="@resetLink">@resetLink</a></p>
    }
    else
    {
        <p>Please check your email for the reset link.</p>
    }
    <p style="margin-top:1rem;">
        <a asp-controller="Account" asp-action="Login" class="btn">Back to login</a>
    </p>
</div>
