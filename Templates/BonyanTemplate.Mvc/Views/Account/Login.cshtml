@model BonyanTemplate.Mvc.Controllers.LoginInputModel
@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}

<div class="card">
    <h1>Login</h1>
    <form asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@returnUrl">
        <div asp-validation-summary="All" class="text-danger validation-summary"></div>
        <div>
            <label asp-for="UserName">User name</label>
            <input asp-for="UserName" autocomplete="username" />
        </div>
        <div>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" autocomplete="current-password" />
        </div>
        <div style="margin:1rem 0;">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe">Remember me</label>
        </div>
        <input asp-for="ReturnUrl" type="hidden" />
        <button type="submit">Sign in</button>
        <p style="margin-top:0.75rem;">
            <a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
        </p>
    </form>
</div>
