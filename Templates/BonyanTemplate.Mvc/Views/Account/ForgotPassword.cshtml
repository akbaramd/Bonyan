@model BonyanTemplate.Mvc.Controllers.ForgotPasswordInputModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="card">
    <h1>Forgot Password</h1>
    <p>Enter your user name or email and we'll send you a link to reset your password.</p>
    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="All" class="text-danger validation-summary"></div>
        <div>
            <label asp-for="UserNameOrEmail">User name or email</label>
            <input asp-for="UserNameOrEmail" type="text" autocomplete="username" />
        </div>
        <button type="submit">Send reset link</button>
    </form>
    <p style="margin-top:1rem;">
        <a asp-controller="Account" asp-action="Login">Back to login</a>
    </p>
</div>
