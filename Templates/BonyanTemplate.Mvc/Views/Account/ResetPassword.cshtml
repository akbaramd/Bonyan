@model BonyanTemplate.Mvc.Controllers.ResetPasswordInputModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="card">
    <h1>Reset Password</h1>
    <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <div asp-validation-summary="All" class="text-danger validation-summary"></div>
        <input asp-for="Token" type="hidden" />
        <div>
            <label asp-for="NewPassword">New password</label>
            <input asp-for="NewPassword" type="password" autocomplete="new-password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label>
            <input asp-for="ConfirmPassword" type="password" autocomplete="new-password" />
        </div>
        <button type="submit">Reset password</button>
    </form>
    <p style="margin-top:1rem;">
        <a asp-controller="Account" asp-action="Login">Back to login</a>
    </p>
</div>
