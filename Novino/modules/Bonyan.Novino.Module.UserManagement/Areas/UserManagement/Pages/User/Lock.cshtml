@page "{id}/{action}"
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Models
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement.ViewModels
@using Bonyan.Novino.Module.UserManagement.Abstractions.Zones.UserActions
@using Bonyan.Ui.Novino.Core
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Pages.User.LockModel
@{
    ViewData["Title"] = Model.Input.ActionType == "lock" ? "قفل کردن کاربر" : "باز کردن قفل کاربر";
    var isLockAction = Model.Input.ActionType == "lock";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex flex-column flex-sm-row gap-2
            align-items-start align-items-sm-center justify-content-sm-between">
            <h4 class="mb-sm-0">
                <span>@(isLockAction ? "قفل کردن کاربر" : "باز کردن قفل کاربر")</span>
            </h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Page("/Index", new { area = "" })">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="/Index">مدیریت کاربران</a>
                    </li>
                    <li class="breadcrumb-item active">@(isLockAction ? "قفل کردن" : "باز کردن قفل")</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-check-double-line label-icon"></i><strong>موفق</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-error-warning-line label-icon"></i><strong>خطا</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="avatar-lg me-3">
                        <div class="avatar-title @(isLockAction ? "bg-warning-subtle text-warning" : "bg-success-subtle text-success") rounded-circle fs-24">
                            <i class="@(isLockAction ? "ri-lock-line" : "ri-lock-unlock-line")"></i>
                        </div>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">@(isLockAction ? "قفل کردن کاربر" : "باز کردن قفل کاربر")</h5>
                        @if (Model.UserDetails != null)
                        {
                            <p class="text-muted mb-0">
                                <strong>@Model.UserDetails.FullName</strong> (@Model.UserDetails.UserName)
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form method="post" id="lockForm">
                    <input type="hidden" asp-for="Input.UserId" value="@Model.UserDetails?.Id" />
                    <input type="hidden" asp-for="Input.ActionType" value="@Model.Input.ActionType" />
                    
                    @if (isLockAction)
                    {
                        <div class="alert alert-warning">
                            <div class="d-flex">
                                <i class="ri-alert-line fs-16 align-middle me-2"></i>
                                <div>
                                    <strong>هشدار:</strong> با قفل کردن این کاربر، وی قادر به ورود به سیستم نخواهد بود.
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Reason" class="form-label">
                                <i class="ri-message-2-line me-1"></i>@Html.DisplayNameFor(m => m.Input.Reason)
                            </label>
                            <textarea asp-for="Input.Reason" class="form-control" rows="3" 
                                      placeholder="دلیل قفل کردن کاربر را وارد کنید (اختیاری)"></textarea>
                            <span asp-validation-for="Input.Reason" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <div class="d-flex">
                                <i class="ri-information-line fs-16 align-middle me-2"></i>
                                <div>
                                    <strong>اطلاعات:</strong> با باز کردن قفل این کاربر، وی مجدداً قادر به ورود به سیستم خواهد بود.
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Custom Fields Zone -->
                    @await Html.RenderZoneAsync(Model.ZoneModel)

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@modelError.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="/Index" class="btn btn-light">
                            <i class="ri-arrow-right-line align-bottom me-1"></i>انصراف
                        </a>
                        <button type="submit" class="btn @(isLockAction ? "btn-warning" : "btn-success")">
                            <i class="@(isLockAction ? "ri-lock-line" : "ri-lock-unlock-line") align-bottom me-1"></i>
                            @(isLockAction ? "قفل کردن کاربر" : "باز کردن قفل کاربر")
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.UserDetails != null)
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="ri-user-line me-2"></i>اطلاعات کاربر
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">نام کاربری</label>
                                <p class="form-control-plaintext">@Model.UserDetails.UserName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">ایمیل</label>
                                <p class="form-control-plaintext">@Model.UserDetails.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">نام و نام خانوادگی</label>
                                <p class="form-control-plaintext">@Model.UserDetails.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">وضعیت فعلی</label>
                                <p class="form-control-plaintext">
                                    @if (Model.UserDetails.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success">
                                            <i class="ri-checkbox-circle-line me-1"></i>فعال
                                        </span>
                                    }
                                    else if (Model.UserDetails.IsLocked)
                                    {
                                        <span class="badge bg-warning-subtle text-warning">
                                            <i class="ri-lock-line me-1"></i>قفل شده
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger">
                                            <i class="ri-close-circle-line me-1"></i>غیرفعال
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Form validation
            document.getElementById('lockForm').addEventListener('submit', function(e) {
                var actionType = '@Model.Input.ActionType';
                
                if (actionType === 'lock') {
                    if (!confirm('آیا از قفل کردن این کاربر اطمینان دارید؟')) {
                        e.preventDefault();
                        return false;
                    }
                } else {
                    if (!confirm('آیا از باز کردن قفل این کاربر اطمینان دارید؟')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });
            
            // Auto close alerts after 5 seconds
            window.setTimeout(function() {
                $(".alert-dismissible").fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
} 