@page
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Models
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement.ViewModels
@using Bonyan.Novino.Module.UserManagement.Abstractions.Zones.IndexPage
@using Bonyan.Ui.Novino.Core
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Pages.User.IndexModel
@{
    ViewData["Title"] = "مدیریت کاربران";
    
    // Initialize zone models
    var headerZone = new UserIndexPageHeaderZone
    {
        CanCreate = Model.ViewModel.CanCreate,
        CanEdit = Model.ViewModel.CanEdit,
        CanDelete = Model.ViewModel.CanDelete,
        CanExport = Model.ViewModel.CanExport,
        CanBulkDelete = Model.ViewModel.CanBulkDelete,
        CanBulkActivate = Model.ViewModel.CanBulkActivate,
        CanBulkDeactivate = Model.ViewModel.CanBulkDeactivate
    };
    
    var filterZone = new UserIndexPageTableFilterZone
    {
        SearchTerm = Model.ViewModel.Filter.SearchTerm,
        Status = Model.ViewModel.Filter.Status,
        SortBy = Model.ViewModel.Filter.SortBy,
        SortOrder = Model.ViewModel.Filter.SortOrder,
        HasFilters = Model.ViewModel.Filter.HasFilters,
        IsExpanded = Model.ViewModel.Filter.HasFilters
    };
    
    var tableHeaderZone = new UserIndexPageTableHeaderZone
    {
        CanCreate = Model.ViewModel.CanCreate,
        CanEdit = Model.ViewModel.CanEdit,
        CanDelete = Model.ViewModel.CanDelete,
        CanExport = Model.ViewModel.CanExport,
        CanBulkDelete = Model.ViewModel.CanBulkDelete,
        CanBulkActivate = Model.ViewModel.CanBulkActivate,
        CanBulkDeactivate = Model.ViewModel.CanBulkDeactivate
    };
    
    var contentZone = new UserIndexPageContentZone
    {
        ViewModel = Model.ViewModel
    };
    
    var tableFooterZone = new UserIndexPageTableFooterZone
    {
        TotalCount = Model.ViewModel.TotalCount,
        CurrentPage = Model.ViewModel.Filter.Page,
        PageSize = Model.ViewModel.Filter.PageSize,
        TotalPages = Model.ViewModel.TotalPages,
        HasFilters = Model.ViewModel.Filter.HasFilters,
        CanExport = Model.ViewModel.CanExport,
        CanBulkDelete = Model.ViewModel.CanBulkDelete,
        CanBulkActivate = Model.ViewModel.CanBulkActivate,
        CanBulkDeactivate = Model.ViewModel.CanBulkDeactivate
    };
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex flex-column flex-sm-row gap-2
            align-items-start align-items-sm-center justify-content-sm-between">
            <h4 class="mb-sm-0">
                <span>مدیریت کاربران</span>
            </h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Page("/Index", new { area = "" })">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item active">مدیریت کاربران</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Custom Header Content Zone -->
@await Html.RenderZoneAsync(headerZone)

<div class="row">
    <div class="col-lg-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-check-double-line label-icon"></i><strong>موفق</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-error-warning-line label-icon"></i><strong>خطا</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="row g-4 align-items-center">
                    <div class="col">
                        <div>
                            <h5 class="card-title mb-0">لیست کاربران</h5>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex gap-2">
                            <button type="button" class="btn @(Model.ViewModel.Filter.HasFilters ? "btn-outline-primary" : "btn-light")" data-bs-toggle="collapse" 
                                    data-bs-target="#filterCollapse" aria-expanded="@Model.ViewModel.Filter.HasFilters.ToString().ToLower()">
                                <i class="ri-filter-3-line align-bottom me-1"></i> 
                                @if (Model.ViewModel.Filter.HasFilters)
                                {
                                    <span>فیلترها (فعال)</span>
                                }
                                else
                                {
                                    <span>فیلترها</span>
                                }
                            </button>
                            @if (Model.ViewModel.CanCreate)
                            {
                                <a asp-page="Create" class="btn btn-success">
                                    <i class="ri-add-line align-bottom me-1"></i> ایجاد کاربر جدید
                                </a>
                            }
                        </div>
                    </div>
                </div>
                

                
                <div class="collapse mt-3 @(Model.ViewModel.Filter.HasFilters ? "show" : "")" id="filterCollapse">
                    <div class="card card-body mb-0">
                        <form method="get" id="filterForm">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">جستجو</label>
                                        <input type="text" class="form-control" asp-for="SearchTerm" placeholder="جستجو در نام کاربری، ایمیل یا نام...">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">وضعیت</label>
                                        <select class="form-select" asp-for="Status">
                                            <option value="" selected="@(string.IsNullOrEmpty(Model.ViewModel.Filter.Status))">همه</option>
                                            <option value="active" selected="@(Model.ViewModel.Filter.Status == "active")">فعال</option>
                                            <option value="inactive" selected="@(Model.ViewModel.Filter.Status == "inactive")">غیرفعال</option>
                                            <option value="locked" selected="@(Model.ViewModel.Filter.Status == "locked")">قفل شده</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">مرتب‌سازی بر اساس</label>
                                        <select class="form-select" asp-for="SortBy">
                                            <option value="UserName" selected="@(Model.ViewModel.Filter.SortBy == "UserName")">نام کاربری</option>
                                            <option value="Email" selected="@(Model.ViewModel.Filter.SortBy == "Email")">ایمیل</option>
                                            <option value="Name" selected="@(Model.ViewModel.Filter.SortBy == "Name")">نام</option>
                                            <option value="Surname" selected="@(Model.ViewModel.Filter.SortBy == "Surname")">نام خانوادگی</option>
                                            <option value="Status" selected="@(Model.ViewModel.Filter.SortBy == "Status")">وضعیت</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mb-3">
                                        <label class="form-label">ترتیب</label>
                                        <select class="form-select" asp-for="SortOrder">
                                            <option value="asc" selected="@(Model.ViewModel.Filter.SortOrder == "asc")">صعودی</option>
                                            <option value="desc" selected="@(Model.ViewModel.Filter.SortOrder == "desc")">نزولی</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Custom Filter Controls Zone -->
                            @await Html.RenderZoneAsync(filterZone)
                            
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3 text-end">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="ri-filter-3-line align-bottom me-1"></i> اعمال فیلترها
                                        </button>
                                        <a asp-page="Index" class="btn btn-light reset-filters">
                                            <i class="ri-refresh-line align-bottom me-1"></i> پاک کردن فیلترها
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            @if (Model.ViewModel.Filter.HasFilters)
            {
                <div class="card-body border-bottom bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge bg-primary">
                                <i class="ri-filter-line me-1"></i>
                                @Model.ViewModel.TotalCount نتیجه یافت شد
                            </span>
                        </div>
                        <div>
                            <a asp-page="Index" class="btn btn-outline-secondary btn-sm reset-filters">
                                <i class="ri-refresh-line me-1"></i>
                                پاک کردن همه فیلترها
                            </a>
                        </div>
                    </div>
                </div>
            }
            
            <div class="card-body">
                @if (!Model.ViewModel.Users.Any())
                {
                    <div class="text-center p-4">
                        <lord-icon src="https://cdn.lordicon.com/nocovwne.json" trigger="loop" style="width:150px;height:150px"></lord-icon>
                        
                        @if (Model.ViewModel.Filter.HasFilters)
                        {
                            <h4 class="mt-4">هیچ کاربری یافت نشد!</h4>
                            <p class="text-muted mb-4">در حال حاضر هیچ کاربری با معیارهای جستجوی شما یافت نشد.</p>
                            <a asp-page="Index" class="btn btn-primary reset-filters">
                                <i class="ri-refresh-line align-bottom me-1"></i> پاک کردن فیلترها
                            </a>
                        }
                        else
                        {
                            <h4 class="mt-4">هیچ کاربری در سیستم وجود ندارد!</h4>
                            <p class="text-muted mb-4">هنوز هیچ کاربری در سیستم ثبت نشده است.</p>
                            
                            @if (Model.ViewModel.CanCreate)
                            {
                                <a asp-page="Create" class="btn btn-primary">
                                    <i class="ri-add-line align-bottom me-1"></i> ایجاد اولین کاربر
                                </a>
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered table-nowrap align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col" style="width: 5%;">#</th>
                                    <th scope="col" style="width: 15%;">نام کاربری</th>
                                    <th scope="col" style="width: 20%;">نام و نام خانوادگی</th>
                                    <th scope="col" style="width: 15%;">ایمیل</th>
                                    <th scope="col" style="width: 10%;">وضعیت</th>
                                    <th scope="col" style="width: 15%;">نقش‌ها</th>
                                    
                                  
                                    @await Html.RenderZoneAsync(tableHeaderZone)
                                    
                                    <th scope="col" style="width: 20%;">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.ViewModel.Users)
                                {
                                    var userActionZone = new UserIndexPageTableActionZone
                                    {
                                        UserId = user.Id
                                    };
                                    
                                    var tableRowZone = new UserIndexPageTableRowZone
                                    {
                                        UserId = user.Id,
                                        RowIndex = Model.ViewModel.Users.IndexOf(user)
                                    };
                                    
                                    <tr>
                                        <td>@((Model.ViewModel.Filter.Page - 1) * Model.ViewModel.Filter.PageSize + Model.ViewModel.Users.IndexOf(user) + 1)</td>
                                        <td>
                                            <span class="text-primary">@user.UserName</span>
                                        </td>
                                        <td>
                                            <span class="fw-medium">@user.FullName</span>
                                        </td>
                                        <td>
                                            <a href="mailto:@user.Email" class="text-body">@user.Email</a>
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <div class="px-2 py-1 d-inline-flex align-items-center border-success rounded-2">
                                                    <i class="ri-checkbox-circle-line fs-14 me-1 text-success"></i>
                                                    <span class="fw-medium text-success">فعال</span>
                                                </div>
                                            }
                                            else if (user.IsLocked)
                                            {
                                                <div class="px-2 py-1 d-inline-flex align-items-center border-warning rounded-2">
                                                    <i class="ri-lock-line fs-14 me-1 text-warning"></i>
                                                    <span class="fw-medium text-warning">قفل شده</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="px-2 py-1 d-inline-flex align-items-center border-danger rounded-2">
                                                    <i class="ri-close-circle-line fs-14 me-1 text-danger"></i>
                                                    <span class="fw-medium text-danger">غیرفعال</span>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @if (user.Roles.Any())
                                            {
                                                <div class="d-flex flex-wrap gap-1">
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        <span class="badge bg-primary-subtle text-primary">@role</span>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">بدون نقش</span>
                                            }
                                        </td>
                                        
                                        <!-- Custom Table Row Columns Zone -->
                                        @await Html.RenderZoneAsync(tableRowZone)
                                        
                                        <td>
                                            <div class="hstack gap-2 justify-content-center">
                                                @await Html.RenderZoneAsync(userActionZone)
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.ViewModel.TotalPages > 1)
                    {
                        <!-- Table Footer Zone -->
                        
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="text-muted">
                                @if (Model.ViewModel.Filter.HasFilters)
                                {
                                    <span>نمایش @((Model.ViewModel.Filter.Page - 1) * Model.ViewModel.Filter.PageSize + 1) تا 
                                    @(Math.Min(Model.ViewModel.Filter.Page * Model.ViewModel.Filter.PageSize, Model.ViewModel.TotalCount)) 
                                    از @Model.ViewModel.TotalCount نتیجه</span>
                                }
                                else
                                {
                                    <span>نمایش @((Model.ViewModel.Filter.Page - 1) * Model.ViewModel.Filter.PageSize + 1) تا 
                                    @(Math.Min(Model.ViewModel.Filter.Page * Model.ViewModel.Filter.PageSize, Model.ViewModel.TotalCount)) 
                                    از @Model.ViewModel.TotalCount کاربر</span>
                                }
                            </div>
                            
                            <!-- Custom Table Footer Content Zone -->
                            @await Html.RenderZoneAsync(tableFooterZone)
                            
                            <nav>
                                <ul class="pagination mb-0">
                                    @if (Model.ViewModel.HasPreviousPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-page="Index" asp-route-page="1" 
                                               asp-route-searchTerm="@Model.ViewModel.Filter.SearchTerm" 
                                               asp-route-status="@Model.ViewModel.Filter.Status" 
                                               asp-route-sortBy="@Model.ViewModel.Filter.SortBy" 
                                               asp-route-sortOrder="@Model.ViewModel.Filter.SortOrder">
                                                <i class="ri-arrow-right-s-line"></i>
                                            </a>
                                        </li>
                                    }
                                    
                                    @{
                                        var startPage = Math.Max(1, Model.ViewModel.Filter.Page - 2);
                                        var endPage = Math.Min(Model.ViewModel.TotalPages, Model.ViewModel.Filter.Page + 2);
                                    }
                                    
                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.ViewModel.Filter.Page ? "active" : "")">
                                            <a class="page-link" asp-page="Index" asp-route-page="@i" 
                                               asp-route-searchTerm="@Model.ViewModel.Filter.SearchTerm" 
                                               asp-route-status="@Model.ViewModel.Filter.Status" 
                                               asp-route-sortBy="@Model.ViewModel.Filter.SortBy" 
                                               asp-route-sortOrder="@Model.ViewModel.Filter.SortOrder">
                                                @i
                                            </a>
                                        </li>
                                    }
                                    
                                    @if (Model.ViewModel.HasNextPage)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-page="Index" asp-route-page="@Model.ViewModel.TotalPages" 
                                               asp-route-searchTerm="@Model.ViewModel.Filter.SearchTerm" 
                                               asp-route-status="@Model.ViewModel.Filter.Status" 
                                               asp-route-sortBy="@Model.ViewModel.Filter.SortBy" 
                                               asp-route-sortOrder="@Model.ViewModel.Filter.SortOrder">
                                                <i class="ri-arrow-left-s-line"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
                
                
                @await Html.RenderZoneAsync(contentZone)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto close alerts after 5 seconds
        window.setTimeout(function() {
            $(".alert-dismissible").fadeTo(500, 0).slideUp(500, function() {
                $(this).remove();
            });
        }, 5000);
        
        // Initialize tooltips
        document.addEventListener("DOMContentLoaded", function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Handle filter form submission
            $('#filterForm').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var url = '@Url.Page("Index")' + '?' + form.serialize();
                window.location = url;
            });
            
            // Handle reset filters
            $('.reset-filters').on('click', function(e) {
                e.preventDefault();
                window.location = '@Url.Page("Index")';
            });
            
            // Handle filter collapse state
            var filterCollapse = document.getElementById('filterCollapse');
            var filterButton = document.querySelector('[data-bs-target="#filterCollapse"]');
            
            if (filterCollapse && filterButton) {
                // Update button text when collapse state changes
                filterCollapse.addEventListener('shown.bs.collapse', function() {
                    updateFilterButtonText(true);
                });
                
                filterCollapse.addEventListener('hidden.bs.collapse', function() {
                    updateFilterButtonText(false);
                });
                
                function updateFilterButtonText(isExpanded) {
                    var icon = filterButton.querySelector('i');
                    var textSpan = filterButton.querySelector('span');
                    
                    if (isExpanded) {
                        textSpan.textContent = 'فیلترها (فعال)';
                        filterButton.classList.add('btn-outline-primary');
                        filterButton.classList.remove('btn-light');
                    } else {
                        textSpan.textContent = 'فیلترها';
                        filterButton.classList.remove('btn-outline-primary');
                        filterButton.classList.add('btn-light');
                    }
                }
                
                // Initialize button state
                var hasFilters = @Json.Serialize(Model.ViewModel.Filter.HasFilters);
                updateFilterButtonText(hasFilters);
            }
            
            // Initialize dynamic content
            initializeDynamicContent();
        });
        
        // Initialize dynamic content from zones
        function initializeDynamicContent() {
            // This function can be used to initialize any dynamic content
            // that was added through the zone system
            console.log('Dynamic content initialized');
        }
        
        // Additional action functions for dynamic actions
        function sendMessage(userId, email) {
            // Implementation for sending message
            alert('ارسال پیام به ' + email);
        }
        
        function resetUserPassword(userId, userName) {
            if (confirm('آیا از تغییر رمز عبور کاربر "' + userName + '" اطمینان دارید؟')) {
                // Implementation for password reset
                alert('رمز عبور کاربر تغییر یافت');
            }
        }
        
        function toggleUserLock(userId, userName) {
            if (confirm('آیا از تغییر وضعیت قفل حساب کاربر "' + userName + '" اطمینان دارید؟')) {
                // Implementation for lock/unlock
                alert('وضعیت قفل حساب کاربر تغییر یافت');
            }
        }
        
        function sendWelcomeEmail(userId, email) {
            if (confirm('آیا از ارسال ایمیل خوش‌آمدگویی به "' + email + '" اطمینان دارید؟')) {
                // Implementation for welcome email
                alert('ایمیل خوش‌آمدگویی ارسال شد');
            }
        }
        
        function exportUsersToExcel() {
            // Implementation for Excel export
            alert('خروجی Excel در حال آماده‌سازی...');
        }
        
        function bulkActivate() {
            // Implementation for bulk activate
            alert('فعال‌سازی گروهی کاربران');
        }
        
        function bulkDeactivate() {
            // Implementation for bulk deactivate
            alert('غیرفعال‌سازی گروهی کاربران');
        }
        
        function bulkDelete() {
            if (confirm('آیا از حذف گروهی کاربران انتخاب شده اطمینان دارید؟')) {
                // Implementation for bulk delete
                alert('حذف گروهی کاربران');
            }
        }
        
        function sendEmail(userId, email) {
            // Implementation for sending email
            alert('ارسال ایمیل به ' + email);
        }
        
        function exportUsers(format) {
            // Implementation for exporting users
            alert('خروجی ' + format + ' در حال آماده‌سازی...');
        }
        
        function bulkEdit() {
            // Implementation for bulk edit
            alert('ویرایش گروهی کاربران');
        }
        
        function quickAction(userId) {
            // Implementation for quick action
            alert('عملیات سریع برای کاربر: ' + userId);
        }
    </script>
} 