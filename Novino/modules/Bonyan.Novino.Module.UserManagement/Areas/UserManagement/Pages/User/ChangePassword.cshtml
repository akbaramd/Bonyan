@page "{id}"
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Models
@using Bonyan.Novino.Module.UserManagement.Areas.UserManagement.ViewModels
@using Bonyan.Novino.Module.UserManagement.Abstractions.Zones.UserActions
@using Bonyan.Ui.Novino.Core
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Pages.User.ChangePasswordModel
@{
    ViewData["Title"] = "تغییر رمز عبور کاربر";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex flex-column flex-sm-row gap-2
            align-items-start align-items-sm-center justify-content-sm-between">
            <h4 class="mb-sm-0">
                <span>تغییر رمز عبور کاربر</span>
            </h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Page("/Index", new { area = "" })">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="/Index">مدیریت کاربران</a>
                    </li>
                    <li class="breadcrumb-item active">تغییر رمز عبور</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-check-double-line label-icon"></i><strong>موفق</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-error-warning-line label-icon"></i><strong>خطا</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="avatar-lg me-3">
                        <div class="avatar-title bg-warning-subtle text-warning rounded-circle fs-24">
                            <i class="ri-lock-password-line"></i>
                        </div>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">تغییر رمز عبور کاربر</h5>
                        @if (Model.UserDetails != null)
                        {
                            <p class="text-muted mb-0">
                                <strong>@Model.UserDetails.FullName</strong> (@Model.UserDetails.UserName)
                            </p>
                        }
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form method="post" id="changePasswordForm">
                    <input type="hidden" asp-for="Input.UserId" value="@Model.UserDetails?.Id" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.NewPassword" class="form-label">
                                    <i class="ri-lock-line me-1"></i>@Html.DisplayNameFor(m => m.Input.NewPassword)
                                </label>
                                <div class="input-group">
                                    <input asp-for="Input.NewPassword" class="form-control" 
                                           placeholder="رمز عبور جدید را وارد کنید" />
                                    <button class="btn btn-outline-secondary" type="button" id="toggleNewPassword">
                                        <i class="ri-eye-line"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label">
                                    <i class="ri-lock-line me-1"></i>@Html.DisplayNameFor(m => m.Input.ConfirmPassword)
                                </label>
                                <div class="input-group">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" 
                                           placeholder="تأیید رمز عبور را وارد کنید" />
                                    <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                        <i class="ri-eye-line"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Custom Fields Zone -->
                    @await Html.RenderZoneAsync(Model.ZoneModel)

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Input.ForceChangePassword" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.ForceChangePassword" class="form-check-label">
                                <i class="ri-checkbox-multiple-line me-1"></i>@Html.DisplayNameFor(m => m.Input.ForceChangePassword)
                            </label>
                        </div>
                        <small class="text-muted">
                            در صورت انتخاب این گزینه، کاربر در ورود بعدی مجبور به تغییر رمز عبور خواهد بود.
                        </small>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@modelError.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="/Index" class="btn btn-light">
                            <i class="ri-arrow-right-line align-bottom me-1"></i>انصراف
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="ri-save-line align-bottom me-1"></i>تغییر رمز عبور
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.UserDetails != null)
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="ri-user-line me-2"></i>اطلاعات کاربر
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">نام کاربری</label>
                                <p class="form-control-plaintext">@Model.UserDetails.UserName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">ایمیل</label>
                                <p class="form-control-plaintext">@Model.UserDetails.Email</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">نام و نام خانوادگی</label>
                                <p class="form-control-plaintext">@Model.UserDetails.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">وضعیت</label>
                                <p class="form-control-plaintext">
                                    @if (Model.UserDetails.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success">
                                            <i class="ri-checkbox-circle-line me-1"></i>فعال
                                        </span>
                                    }
                                    else if (Model.UserDetails.IsLocked)
                                    {
                                        <span class="badge bg-warning-subtle text-warning">
                                            <i class="ri-lock-line me-1"></i>قفل شده
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger">
                                            <i class="ri-close-circle-line me-1"></i>غیرفعال
                                        </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Toggle password visibility
            document.getElementById('toggleNewPassword').addEventListener('click', function() {
                const passwordField = document.getElementById('Input_NewPassword');
                const icon = this.querySelector('i');
                
                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    icon.className = 'ri-eye-off-line';
                } else {
                    passwordField.type = 'password';
                    icon.className = 'ri-eye-line';
                }
            });
            
            document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
                const passwordField = document.getElementById('Input_ConfirmPassword');
                const icon = this.querySelector('i');
                
                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    icon.className = 'ri-eye-off-line';
                } else {
                    passwordField.type = 'password';
                    icon.className = 'ri-eye-line';
                }
            });
            
            // Form validation
            document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
                const newPassword = document.getElementById('Input_NewPassword').value;
                const confirmPassword = document.getElementById('Input_ConfirmPassword').value;
                
                if (newPassword !== confirmPassword) {
                    e.preventDefault();
                    alert('رمز عبور و تأیید آن مطابقت ندارند');
                    return false;
                }
                
                if (newPassword.length < 6) {
                    e.preventDefault();
                    alert('رمز عبور باید حداقل 6 کاراکتر باشد');
                    return false;
                }
            });
            
            // Auto close alerts after 5 seconds
            window.setTimeout(function() {
                $(".alert-dismissible").fadeTo(500, 0).slideUp(500, function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
} 