@page "{id:guid}"
@model Bonyan.Novino.Module.UserManagement.Areas.UserManagement.Pages.User.DeleteModel
@{
    ViewData["Title"] = $"حذف کاربر - {Model.User.UserName}";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex flex-column flex-sm-row gap-2
            align-items-start align-items-sm-center justify-content-sm-between">
            <h4 class="mb-sm-0">
                <span>حذف کاربر</span>
            </h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Page("/Index", new { area = "" })">داشبورد</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-page="Index">مدیریت کاربران</a>
                    </li>
                    <li class="breadcrumb-item active">حذف کاربر</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                <i class="ri-error-warning-line label-icon"></i><strong>خطا</strong> @Model.ErrorMessage
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Warning Card -->
        <div class="card border-danger">
            <div class="card-header bg-danger-subtle border-danger">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm">
                            <div class="avatar-title bg-danger-subtle text-danger rounded-circle fs-20">
                                <i class="ri-error-warning-line"></i>
                            </div>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1 text-danger">هشدار حذف کاربر</h5>
                        <p class="card-text text-muted mb-0">این عملیات غیرقابل بازگشت است و تمام اطلاعات کاربر حذف خواهد شد.</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">اطلاعات کاربری که حذف خواهد شد:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="ri-user-line text-primary me-2"></i>
                                <strong>نام کاربری:</strong> <span class="text-danger">@Model.User.UserName</span>
                            </li>
                            <li class="mb-2">
                                <i class="ri-user-settings-line text-primary me-2"></i>
                                <strong>نام و نام خانوادگی:</strong> @Model.User.FullName
                            </li>
                            <li class="mb-2">
                                <i class="ri-mail-line text-primary me-2"></i>
                                <strong>ایمیل:</strong> @(string.IsNullOrEmpty(Model.User.Email) ? "تعریف نشده" : Model.User.Email)
                            </li>
                            <li class="mb-2">
                                <i class="ri-phone-line text-primary me-2"></i>
                                <strong>شماره تلفن:</strong> @(string.IsNullOrEmpty(Model.User.PhoneNumber) ? "تعریف نشده" : Model.User.PhoneNumber)
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">جزئیات حساب کاربری:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="ri-calendar-line text-primary me-2"></i>
                                <strong>تاریخ ایجاد:</strong> @Model.User.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                            </li>
                            <li class="mb-2">
                                <i class="ri-shield-user-line text-primary me-2"></i>
                                <strong>نقش‌ها:</strong> 
                                @if (Model.User.Roles.Any())
                                {
                                    <div class="d-flex flex-wrap gap-1 mt-1">
                                        @foreach (var role in Model.User.Roles)
                                        {
                                            <span class="badge bg-primary-subtle text-primary">@role</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">بدون نقش</span>
                                }
                            </li>
                            <li class="mb-2">
                                <i class="ri-checkbox-circle-line text-primary me-2"></i>
                                <strong>وضعیت:</strong> 
                                @if (Model.User.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success">فعال</span>
                                }
                                else if (Model.User.IsLocked)
                                {
                                    <span class="badge bg-warning-subtle text-warning">قفل شده</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger">غیرفعال</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmation Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-shield-check-line text-warning me-2"></i>
                    تأیید حذف کاربر
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                    <i class="ri-alert-line label-icon"></i>
                    <strong>توجه:</strong> برای تأیید حذف، لطفاً نام کاربری <strong>"@Model.User.UserName"</strong> را در فیلد زیر وارد کنید.
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

                <form method="post" id="deleteForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ConfirmationUsername" class="form-label">
                                    <i class="ri-user-line me-1"></i>
                                    نام کاربری برای تأیید
                                </label>
                                <input type="text" 
                                       class="form-control @(ViewData.ModelState["ConfirmationUsername"]?.Errors.Any() == true ? "is-invalid" : "")" 
                                       asp-for="ConfirmationUsername" 
                                       placeholder="نام کاربری را وارد کنید"
                                       autocomplete="off">
                                <span asp-validation-for="ConfirmationUsername" class="invalid-feedback"></span>
                                <div class="form-text">
                                    برای تأیید حذف، نام کاربری <strong>@Model.User.UserName</strong> را وارد کنید.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-page="Index" class="btn btn-light">
                                    <i class="ri-arrow-right-line align-bottom me-1"></i>
                                    انصراف
                                </a>
                                <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                    <i class="ri-delete-bin-line align-bottom me-1"></i>
                                    حذف کاربر
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-information-line text-info me-2"></i>
                    اطلاعات تکمیلی
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">آنچه حذف خواهد شد:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="ri-check-line text-success me-2"></i>
                                حساب کاربری و اطلاعات شخصی
                            </li>
                            <li class="mb-2">
                                <i class="ri-check-line text-success me-2"></i>
                                تمام نقش‌های تخصیص داده شده
                            </li>
                            <li class="mb-2">
                                <i class="ri-check-line text-success me-2"></i>
                                تمام Claims و دسترسی‌های خاص
                            </li>
                            <li class="mb-2">
                                <i class="ri-check-line text-success me-2"></i>
                                تاریخچه ورود و فعالیت‌ها
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">نکات مهم:</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="ri-alert-line text-warning me-2"></i>
                                این عملیات غیرقابل بازگشت است
                            </li>
                            <li class="mb-2">
                                <i class="ri-alert-line text-warning me-2"></i>
                                تمام اطلاعات کاربر به طور کامل حذف می‌شود
                            </li>
                            <li class="mb-2">
                                <i class="ri-alert-line text-warning me-2"></i>
                                در صورت نیاز، ابتدا از اطلاعات پشتیبان تهیه کنید
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmationInput = document.getElementById('ConfirmationUsername');
            const deleteButton = document.getElementById('deleteButton');
            const expectedUsername = '@Model.User.UserName';

            function validateConfirmation() {
                const inputValue = confirmationInput.value.trim();
                const isValid = inputValue === expectedUsername;
                
                deleteButton.disabled = !isValid;
                
                if (isValid) {
                    deleteButton.classList.remove('btn-danger');
                    deleteButton.classList.add('btn-danger');
                } else {
                    deleteButton.classList.remove('btn-danger');
                    deleteButton.classList.add('btn-danger');
                }
            }

            confirmationInput.addEventListener('input', validateConfirmation);
            confirmationInput.addEventListener('keyup', validateConfirmation);

            // Form submission confirmation
            document.getElementById('deleteForm').addEventListener('submit', function(e) {
                const inputValue = confirmationInput.value.trim();
                if (inputValue !== expectedUsername) {
                    e.preventDefault();
                    alert('لطفاً نام کاربری را به درستی وارد کنید.');
                    return false;
                }

                const confirmed = confirm(`آیا از حذف کاربر "${expectedUsername}" اطمینان دارید؟\n\nاین عملیات غیرقابل بازگشت است.`);
                if (!confirmed) {
                    e.preventDefault();
                    return false;
                }

                // Show loading state
                deleteButton.innerHTML = '<i class="ri-loader-4-line align-bottom me-1"></i> در حال حذف...';
                deleteButton.disabled = true;
            });

            // Auto focus on confirmation input
            confirmationInput.focus();
        });
    </script>
} 