@model UserDetailsViewModel

<div class="row">
    <div class="col-lg-8">
        <!-- Activity Timeline -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-time-line me-2"></i>تاریخچه فعالیت‌ها
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline-vertical">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary">
                            <i class="ri-user-add-line"></i>
                        </div>
                        <div class="timeline-content">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">ایجاد حساب کاربری</h6>
                                <small class="text-muted">@Model.CreatedAtFormatted</small>
                            </div>
                            <p class="text-muted mb-0">حساب کاربری با نام کاربری "@Model.UserName" ایجاد شد.</p>
                        </div>
                    </div>
                    
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success">
                                <i class="ri-login-circle-line"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">آخرین ورود</h6>
                                    <small class="text-muted">@Model.LastLoginFormatted</small>
                                </div>
                                <p class="text-muted mb-0">آخرین ورود موفق به سیستم</p>
                            </div>
                        </div>
                    }
                    
                    @if (Model.FailedLoginAttempts > 0)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning">
                                <i class="ri-error-warning-line"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">تلاش‌های ناموفق ورود</h6>
                                    <small class="text-muted">@Model.FailedLoginAttempts بار</small>
                                </div>
                                <p class="text-muted mb-0">تعداد تلاش‌های ناموفق برای ورود به سیستم</p>
                            </div>
                        </div>
                    }
                    
                    @if (Model.AccountLockedUntil.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger">
                                <i class="ri-lock-line"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">قفل شدن حساب</h6>
                                    <small class="text-muted">@Model.AccountLockedUntil.Value.ToString("yyyy/MM/dd HH:mm")</small>
                                </div>
                                <p class="text-muted mb-0">حساب کاربری به دلیل تلاش‌های ناموفق قفل شد.</p>
                            </div>
                        </div>
                    }
                    
                    @if (Model.BannedUntil.HasValue)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger">
                                <i class="ri-forbid-line"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">مسدود شدن حساب</h6>
                                    <small class="text-muted">@Model.BannedUntil.Value.ToString("yyyy/MM/dd HH:mm")</small>
                                </div>
                                <p class="text-muted mb-0">حساب کاربری مسدود شد.</p>
                            </div>
                        </div>
                    }
                    
                    @if (Model.EmailConfirmed)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info">
                                <i class="ri-mail-check-line"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">تأیید ایمیل</h6>
                                    <small class="text-muted">تأیید شده</small>
                                </div>
                                <p class="text-muted mb-0">آدرس ایمیل کاربر تأیید شد.</p>
                            </div>
                        </div>
                    }
                    
                    @if (Model.PhoneNumberConfirmed)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info">
                                <i class="ri-phone-check-line"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0">تأیید شماره تلفن</h6>
                                    <small class="text-muted">تأیید شده</small>
                                </div>
                                <p class="text-muted mb-0">شماره تلفن کاربر تأیید شد.</p>
                            </div>
                        </div>
                    }
                    
                    @if (!Model.LastLoginAt.HasValue && Model.FailedLoginAttempts == 0 && !Model.AccountLockedUntil.HasValue && !Model.BannedUntil.HasValue)
                    {
                        <div class="text-center py-4">
                            <lord-icon src="https://cdn.lordicon.com/nocovwne.json" trigger="loop" style="width:100px;height:100px"></lord-icon>
                            <h5 class="mt-3">هیچ فعالیتی ثبت نشده</h5>
                            <p class="text-muted">این کاربر هنوز هیچ فعالیتی در سیستم نداشته است.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Activity Statistics -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-bar-chart-line me-2"></i>آمار فعالیت
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-primary-subtle rounded">
                                <div class="avatar-title">
                                    <i class="ri-calendar-line text-primary"></i>
                                </div>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-0">عمر حساب</h6>
                                <p class="text-muted mb-0">@GetAccountAge()</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-success-subtle rounded">
                                <div class="avatar-title">
                                    <i class="ri-login-circle-line text-success"></i>
                                </div>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-0">وضعیت ورود</h6>
                                <p class="text-muted mb-0">@GetLoginStatus()</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-warning-subtle rounded">
                                <div class="avatar-title">
                                    <i class="ri-error-warning-line text-warning"></i>
                                </div>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-0">تلاش‌های ناموفق</h6>
                                <p class="text-muted mb-0">@Model.FailedLoginAttempts بار</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="avatar-sm bg-info-subtle rounded">
                                <div class="avatar-title">
                                    <i class="ri-shield-check-line text-info"></i>
                                </div>
                            </div>
                            <div class="ms-3">
                                <h6 class="mb-0">وضعیت تأیید</h6>
                                <p class="text-muted mb-0">@GetVerificationStatus()</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Status -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-shield-line me-2"></i>وضعیت امنیت
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="ri-checkbox-circle-line text-success me-2"></i>
                            <span>ایمیل تأیید شده</span>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @(Model.EmailConfirmed ? "checked" : "") disabled>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="ri-phone-check-line text-success me-2"></i>
                            <span>تلفن تأیید شده</span>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @(Model.PhoneNumberConfirmed ? "checked" : "") disabled>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="ri-lock-line text-warning me-2"></i>
                            <span>حساب قفل شده</span>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @(Model.IsLocked ? "checked" : "") disabled>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="ri-forbid-line text-danger me-2"></i>
                            <span>حساب مسدود شده</span>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @(Model.BannedUntil.HasValue ? "checked" : "") disabled>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-flashlight-line me-2"></i>عملیات سریع
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (Model.IsLocked)
                    {
                        <button type="button" class="btn btn-outline-success" onclick="unlockUser('@Model.Id')">
                            <i class="ri-unlock-line align-bottom me-1"></i>باز کردن قفل
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-warning" onclick="lockUser('@Model.Id')">
                            <i class="ri-lock-line align-bottom me-1"></i>قفل کردن حساب
                        </button>
                    }
                    
                    @if (!Model.EmailConfirmed && !string.IsNullOrEmpty(Model.Email))
                    {
                        <button type="button" class="btn btn-outline-info" onclick="verifyEmail('@Model.Id')">
                            <i class="ri-mail-check-line align-bottom me-1"></i>تأیید ایمیل
                        </button>
                    }
                    
                    @if (!Model.PhoneNumberConfirmed && !string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <button type="button" class="btn btn-outline-info" onclick="verifyPhone('@Model.Id')">
                            <i class="ri-phone-check-line align-bottom me-1"></i>تأیید تلفن
                        </button>
                    }
                    
                    <button type="button" class="btn btn-outline-secondary" onclick="resetFailedAttempts('@Model.Id')">
                        <i class="ri-refresh-line align-bottom me-1"></i>بازنشانی تلاش‌ها
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline-vertical {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline-item {
        position: relative;
        margin-bottom: 30px;
    }
    
    .timeline-marker {
        position: absolute;
        left: -45px;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 14px;
    }
    
    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 3px solid #dee2e6;
    }
    
    .timeline-item:not(:last-child)::after {
        content: '';
        position: absolute;
        left: -30px;
        top: 30px;
        width: 2px;
        height: calc(100% + 15px);
        background: #dee2e6;
    }
</style>

<script>
    function verifyEmail(userId) {
        if (confirm('آیا از تأیید ایمیل کاربر اطمینان دارید؟')) {
            // Implementation for email verification
            alert('ایمیل کاربر تأیید شد');
        }
    }
    
    function verifyPhone(userId) {
        if (confirm('آیا از تأیید شماره تلفن کاربر اطمینان دارید؟')) {
            // Implementation for phone verification
            alert('شماره تلفن کاربر تأیید شد');
        }
    }
    
    function resetFailedAttempts(userId) {
        if (confirm('آیا از بازنشانی تعداد تلاش‌های ناموفق اطمینان دارید؟')) {
            // Implementation for resetting failed attempts
            alert('تعداد تلاش‌های ناموفق بازنشانی شد');
        }
    }
</script>

@functions {
    private string GetAccountAge()
    {
        var age = DateTime.Now - Model.CreatedAt;
        if (age.TotalDays >= 365)
        {
            var years = (int)(age.TotalDays / 365);
            return $"{years} سال";
        }
        else if (age.TotalDays >= 30)
        {
            var months = (int)(age.TotalDays / 30);
            return $"{months} ماه";
        }
        else
        {
            var days = (int)age.TotalDays;
            return $"{days} روز";
        }
    }
    
    private string GetLoginStatus()
    {
        if (Model.LastLoginAt.HasValue)
        {
            return "ورود کرده";
        }
        else
        {
            return "هرگز ورود نکرده";
        }
    }
    
    private string GetVerificationStatus()
    {
        var verifiedCount = 0;
        var totalCount = 0;
        
        if (!string.IsNullOrEmpty(Model.Email))
        {
            totalCount++;
            if (Model.EmailConfirmed) verifiedCount++;
        }
        
        if (!string.IsNullOrEmpty(Model.PhoneNumber))
        {
            totalCount++;
            if (Model.PhoneNumberConfirmed) verifiedCount++;
        }
        
        if (totalCount == 0) return "بدون اطلاعات";
        return $"{verifiedCount} از {totalCount}";
    }
} 