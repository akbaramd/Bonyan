<!doctype html>
<html lang="en" dir="rtl" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable" data-theme="default" data-theme-colors="default">
<head>
    @Html.Partial("_title_meta")
    @RenderSection("styles", required: false)
    
    <!-- CSS Assets -->
    <css-assets location="Head" />
    <inline-css location="InlineHead" />
</head>
<body dir="rtl">
    <!-- Begin page -->
    <div id="layout-wrapper">
        @Html.Partial("_menu.cshtml")

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">
                    @Html.Partial("_page_title.cshtml")

                    @RenderBody()
                </div>
            </div>

            @RenderSection("externalhtml", required: false)
            @Html.Partial("_footer.cshtml")
        </div>

    </div>
    <!-- END layout-wrapper -->
    @Html.Partial("_customizer.cshtml")

    <!-- JavaScript Assets -->
    <js-assets location="Footer" />

    @RenderSection("scripts", required: false)
</body>
</html>