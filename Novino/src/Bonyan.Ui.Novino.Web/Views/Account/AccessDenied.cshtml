@{
    ViewData["Title"] = "دسترسی رد شد";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl" data-bs-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - پنل مدیریت بنیان</title>
    
    <!-- CSS Assets in Head -->
    <css-assets location="Head"></css-assets>
    <js-assets location="Head"></js-assets>
    
    <style>
        :root {
            --primary-color: #4f46e5;
            --primary-dark: #3730a3;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --bg-primary: #ffffff;
            --border-color: #d1d5db;
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }

        [data-bs-theme="dark"] {
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --bg-primary: #1e293b;
            --border-color: #475569;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Vazirmatn', 'Tahoma', 'Arial', sans-serif;
            margin: 0;
            padding: 1rem;
            direction: rtl;
        }
        
        .access-denied-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 1rem;
            box-shadow: var(--shadow-xl);
            padding: 2.5rem;
            width: 100%;
            max-width: 500px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            text-align: center;
        }
        
        .access-denied-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: white;
            font-size: 2rem;
        }
        
        .access-denied-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }
        
        .access-denied-message {
            color: var(--text-secondary);
            font-size: 1rem;
            margin-bottom: 2rem;
            line-height: 1.6;
        }
        
        .btn-back {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            color: white;
            text-decoration: none;
            display: inline-block;
            transition: all 0.2s ease;
        }
        
        .btn-back:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
            color: white;
        }
        
        .btn-login {
            background: linear-gradient(135deg, var(--success-color) 0%, #059669 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            color: white;
            text-decoration: none;
            display: inline-block;
            margin-right: 0.75rem;
            transition: all 0.2s ease;
        }
        
        .btn-login:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 20px rgba(16, 185, 129, 0.3);
            color: white;
        }
        
        @@media (max-width: 576px) {
            .access-denied-container {
                margin: 1rem;
                padding: 2rem;
            }
            
            .btn-back, .btn-login {
                display: block;
                margin: 0.5rem 0;
                margin-right: 0;
            }
        }
        
        [data-bs-theme="dark"] .access-denied-container {
            background: rgba(30, 41, 59, 0.95);
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        [data-bs-theme="dark"] .access-denied-title {
            color: #f1f5f9;
        }
        
        [data-bs-theme="dark"] .access-denied-message {
            color: #94a3b8;
        }

        /* Focus indicators */
        .btn-back:focus,
        .btn-login:focus {
            outline: 2px solid var(--primary-color);
            outline-offset: 2px;
        }

        /* High contrast mode support */
        @@media (prefers-contrast: high) {
            .access-denied-container {
                border: 2px solid var(--text-primary);
            }
        }

        /* Reduced motion support */
        @@media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="access-denied-icon" role="img" aria-label="آیکون دسترسی رد شد">
            <i class="fas fa-ban"></i>
        </div>
        
        <h1 class="access-denied-title">دسترسی رد شد</h1>
        
        <p class="access-denied-message">
            متأسفانه شما مجوز دسترسی به این صفحه را ندارید. 
            در صورت اعتقاد به اشتباه بودن این موضوع، لطفاً با مدیر سیستم تماس بگیرید.
        </p>
        
        <div class="d-flex justify-content-center">
            <a href="javascript:history.back()" class="btn btn-back">
                <i class="fas fa-arrow-right ms-2"></i>
                بازگشت
            </a>
            <a href="@Url.Action("Login", "Account")" class="btn btn-login">
                <i class="fas fa-sign-in-alt ms-2"></i>
                ورود
            </a>
        </div>
    </div>
    
    <!-- JavaScript Assets in Footer -->
    <js-assets location="Footer"></js-assets>
    
    <script>
        // Load saved theme
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('admin-theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', savedTheme);
        });
    </script>
</body>
</html> 