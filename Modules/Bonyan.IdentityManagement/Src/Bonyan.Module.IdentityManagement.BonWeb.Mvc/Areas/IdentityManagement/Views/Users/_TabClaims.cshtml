@model Bonyan.IdentityManagement.BonWeb.Mvc.Models.Manage.ManageTabClaimsViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Bonyan.IdentityManagement.BonWeb.Mvc.IdentityManagementResource> L
@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
    return;
}
<form method="post" asp-action="AddClaim" class="mb-3 p-3 bg-light rounded">
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="row g-2">
        <div class="col-md-3">
            <label class="form-label small">@L["Users:ClaimType"]</label>
            <input type="text" name="claimType" class="form-control form-control-sm" placeholder="@L["Users:ClaimTypePlaceholder"]" required />
        </div>
        <div class="col-md-3">
            <label class="form-label small">@L["Users:ClaimValue"]</label>
            <input type="text" name="claimValue" class="form-control form-control-sm" required />
        </div>
        <div class="col-md-3">
            <label class="form-label small">@L["Users:ClaimIssuer"]</label>
            <input type="text" name="issuer" class="form-control form-control-sm" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary btn-sm">@L["Users:AddClaim"]</button>
        </div>
    </div>
</form>
<h6 class="mt-3">@L["Users:CurrentClaims"]</h6>
@if (Model.Claims != null && Model.Claims.Any())
{
    <div class="table-responsive">
        <table class="table table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>@L["Users:ClaimType"]</th>
                    <th>@L["Users:ClaimValue"]</th>
                    <th>@L["Users:ClaimIssuer"]</th>
                    <th class="text-end">@L["Users:Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Claims)
                {
                    <tr>
                        <td><code class="small">@c.ClaimType</code></td>
                        <td>@c.ClaimValue</td>
                        <td>@(c.Issuer ?? "â€”")</td>
                        <td class="text-end">
                            <form method="post" asp-action="RemoveClaim" class="d-inline" onsubmit="return confirm('@L["Users:ConfirmRemoveClaim"]');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.UserId" />
                                <input type="hidden" name="claimType" value="@c.ClaimType" />
                                <input type="hidden" name="claimValue" value="@c.ClaimValue" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">@L["Roles:Delete"]</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted mb-0">@L["Users:NoClaims"]</p>
}
