@model Bonyan.IdentityManagement.BonWeb.Mvc.Models.Manage.ManageTabMetasViewModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Bonyan.IdentityManagement.BonWeb.Mvc.IdentityManagementResource> L
<p class="text-muted small">@L["Users:TabMetasHelp"]</p>
<form method="post" asp-action="SetMeta" class="mb-3 p-3 bg-light rounded">
    @Html.AntiForgeryToken()
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="row g-2">
        <div class="col-md-4">
            <label class="form-label small">@L["Users:MetaKey"]</label>
            <input type="text" name="metaKey" class="form-control form-control-sm" placeholder="@L["Users:MetaKeyPlaceholder"]" required />
        </div>
        <div class="col-md-4">
            <label class="form-label small">@L["Users:MetaValue"]</label>
            <input type="text" name="metaValue" class="form-control form-control-sm" required />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary btn-sm">@L["Users:SaveMeta"]</button>
        </div>
    </div>
</form>
<h6 class="mt-3">@L["Users:CurrentMetas"]</h6>
@if (Model.Metas != null && Model.Metas.Any())
{
    <div class="table-responsive">
        <table class="table table-sm table-hover">
            <thead class="table-light">
                <tr>
                    <th>@L["Users:MetaKey"]</th>
                    <th>@L["Users:MetaValue"]</th>
                    <th class="text-end">@L["Users:Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kv in Model.Metas)
                {
                    <tr>
                        <td><code class="small">@kv.Key</code></td>
                        <td>@kv.Value</td>
                        <td class="text-end">
                            <form method="post" asp-action="DeleteMeta" class="d-inline" onsubmit="return confirm('@L["Users:ConfirmDeleteMeta"]');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@Model.UserId" />
                                <input type="hidden" name="metaKey" value="@kv.Key" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">@L["Roles:Delete"]</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted mb-0">@L["Users:NoMetas"]</p>
}
