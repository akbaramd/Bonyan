@inject Microsoft.Extensions.Localization.IStringLocalizer<Bonyan.IdentityManagement.BonWeb.Mvc.IdentityManagementResource> L
@inject Microsoft.Extensions.Localization.IStringLocalizer<Bonyan.Ui.BonWeb.Mvc.BonWebMenuResource> MenuL
@{
    ViewData["Title"] = L["Account:ForgotPasswordConfirmationTitle"];
    var resetLink = ViewData["ResetLink"] as string;
}

<div class="card shadow-sm border-0">
    <div class="card-body p-4 p-md-5">
        <div class="fw-semibold mb-3">@MenuL["Layout:BonWeb"]</div>
        <h1 class="h4 mb-1">@L["Account:ForgotPasswordConfirmationTitle"]</h1>
        <p class="text-body-secondary mb-4">@L["Account:ForgotPasswordConfirmationInfo"]</p>
        @if (!string.IsNullOrEmpty(resetLink))
        {
            <p class="small text-body-secondary mb-3"><strong>Development mode:</strong> @L["Account:UseThisLink"]</p>
            <p class="small mb-3"><a href="@resetLink">@resetLink</a></p>
        }
        <div class="mt-3">
            <a class="btn btn-outline-primary" asp-area="IdentityManagement" asp-controller="Account" asp-action="Login">@L["Account:BackToLogin"]</a>
        </div>
    </div>
</div>
